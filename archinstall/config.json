{
  "additional-repositories": ["multilib"],
  "archinstall-language": "English",
  "audio_config": { "audio": "pipewire" },
  "bootloader": "Grub",
  "hostname": "archlinux",
  "kernels": ["linux"],
  "locale_config": {
    "kb_layout": "us",
    "sys_enc": "UTF-8",
    "sys_lang": "en_US"
  },
  "mirror_config": {
    "mirror_regions": {
      "China": ["http://mirrors.163.com/archlinux/$repo/os/$arch", "http://mirrors.aliyun.com/archlinux/$repo/os/$arch"]
    }
  },
  "network_config": {
    "type": "iso"
  },
  "packages": ["neovim", "git", "stow"],
  "profile_config": {
    "gfx_driver": "All open-source",
    "greeter": "ly",
    "profile": {
      "details": ["Qtile"],
      "main": "Desktop"
    }
  },
  "silent": false,
  "timezone": "Asia/Shanghai"
}
